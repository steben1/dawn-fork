<div class="custom-section">
  <h2>{{ section.settings.heading }}</h2>
  <h3>{{ section.settings.subheading }}</h3>

  <a href="{{ section.settings.button_link }}" class="cta-button">{{ section.settings.button_text }}</a>
</div>

{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Here I am"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Let's develop this shop!"
    },

    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Click Now!"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Image description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .custom-section {
    text-align: center;
    padding: 20px;
  }

  .custom-section h2 {
    font-size: 2em;
    margin-bottom: 10px;
  }

  .custom-section h3 {
    font-size: 1.5em;
    margin-bottom: 20px;
  }

  .image-row {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
  }

  .image-container {
    flex: 1;
  }

  .image-container img {
    max-width: 100%;
    height: auto;
  }

  .cta-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: red;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }
</style>
